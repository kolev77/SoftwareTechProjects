                                <li style="font-family: fantasy; font-size: 3em;">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li style="font-family: fantasy; font-size: 3em">@Html.ActionLink("Posts", "Index", "Posts")</li>
                                <li style="font-family: fantasy; font-size: 3em">@Html.ActionLink("New Post", "Create", "Posts")</li>
